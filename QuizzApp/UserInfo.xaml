<Window x:Class="QuizzApp.UserInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizzApp"
        mc:Ignorable="d"
        Title="UserInfo" Height="600" Width="800">
    <Grid Background="LightBlue">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Nhập thông tin của bạn" FontSize="20" Margin="10"/>
            <TextBox Name="NameTextBox" Text="" Foreground="Gray" GotFocus="RemoveText" LostFocus="AddText" Height="27"/>
            <Button Content="Bắt đầu" Click="StartExam_Click" Margin="10" Width="133"/>
            <Button Content="Xem điểm" Click="Score_Click" Width="133"/>
        </StackPanel>
    </Grid>
</Window>